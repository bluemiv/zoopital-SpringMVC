<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.pet.client.model.ClientDAO">

	<!-- 중복확인하는 쿼리 -->
	<select id="selectClient" resultType="com.pet.client.model.ClientDTO">
		select* from
			(select client_id from client
	    union
			select emp_code from emp)
		where client_id = ${client_id}
	</select>
	
	<insert id="insertClient" parameterType="com.pet.client.model.ClientDTO">
		INSERT INTO CLIENT
		VALUES(
			#{client_id},
			#{client_pw},
			#{client_name},
			#{client_tel},
			#{client_email},
			SYSOUT,
			1,
			#{client_add},
			#{client_add_detail},
			#{client_postcode}
		)
	</insert>
</mapper>