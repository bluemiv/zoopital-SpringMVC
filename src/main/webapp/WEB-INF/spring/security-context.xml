<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<security:http auto-config="true" use-expressions="true">
		<security:csrf disabled="true" />
		<security:access-denied-handler error-page="/accessDeniedPage.pet"/>
		<security:form-login
		login-page="/loginForm.pet"
		login-processing-url="/j_spring_security_check"
		default-target-url="/home.pet"
		authentication-failure-url="/loginForm.pet?err"/>
		
		<security:intercept-url pattern="/home.pet" access="hasAnyRole('ROLE_ADMIN', 'ROLE_SUPER_ADMIN')" />
		<security:intercept-url pattern="/medicament/**" access="hasRole('ROLE_ADMIN')" />
		
		<security:logout logout-success-url="/loginForm.pet" logout-url="/j_spring_security_logout"/>
	</security:http>

	<security:authentication-manager>
		<security:authentication-provider>
			<security:jdbc-user-service
				data-source-ref="driverManagerDataSource"
				users-by-username-query="SELECT * 
											FROM (
												SELECT A.ADMIN_ID, A.ADMIN_PWD, A.ADMIN_ENABLED
												FROM ADMIN A, STORE S
												WHERE A.ADMIN_ID = S.STORE_ID AND A.ADMIN_PWD = S.STORE_PASSWORD
												UNION
												SELECT 'system', 'oracle', 1
												FROM ADMIN A
											)
											WHERE ADMIN_ID = ?"
				authorities-by-username-query="SELECT * 
												FROM (
													SELECT A.ADMIN_ID, A.ADMIN_ROLE
													FROM ADMIN A, STORE S
													WHERE A.ADMIN_ID = S.STORE_ID AND A.ADMIN_PWD = S.STORE_PASSWORD
													UNION
													SELECT 'system', 'ROLE_SUPER_ADMIN'
													FROM ADMIN A
												)
												WHERE ADMIN_ID = ?" />
		</security:authentication-provider>
	</security:authentication-manager>
</beans>
