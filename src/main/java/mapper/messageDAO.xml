<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper  namespace="com.pet.model.MessageDAO">
	<!-- 전체 쪽지함 가져옴 -->
	<select id="selectAllMessage" parameterType = "com.pet.model.MessageDTO" resultType = "com.pet.model.MessageDTO">
		SELECT *
		FROM MESSAGE
		<where>
			<if test="message_reader != null and message_reader != ''">
			MESSAGE_READER = #{message_writer}
			</if>
			<if test="message_writer != null and message_writer != ''">
			MESSAGE_WRITER = #{message_writer} 
			</if>
		</where>
	</select>
</mapper>